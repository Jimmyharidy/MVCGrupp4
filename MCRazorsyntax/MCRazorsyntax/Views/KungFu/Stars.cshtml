
@{
    ViewBag.Title = "Stars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stars</h2>
@helper RatingStars(int numberOfStars)
{
    <span style="color: orange">
        @for (int i = 0; i <= numberOfStars; i++)
        {<text>*</text>
        }
    </span>
}
<h3>Stars to display</h3>
@RatingStars(4)

