@model FiveInRow.Models.FiveRow
<link href="~/Content/StyleSheet.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Game of Five in a Row</h2>

@using (Html.BeginForm("Index", "Five"))
{
    <form>
        <fieldset class="scheduler-border">

            @for (int i = 1; i <= 7; i++)
            {
                <button type="submit" name="choice" id="Button" value="@i" class="btn btn-secondary btn-lg">@i</button>
            }



            @for (int i = 0; i < @Model.Board.GetLength(0); i++)
            {
                for (int j = 0; j < @Model.Board.GetLength(1); j++)
                {
                    <button type="button" id="@Model.Board[i,j]" disabled="disabled" style="background-color: @Model.Color" class="btn btn-secondary btn-lg">@i,@j</button>
                }

            }

        </fieldset>
    </form>
}
