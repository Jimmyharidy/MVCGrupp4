@model TicTacToe.Models.TicTacToeModel

<link href="~/CSS/ButtonStyle.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
}

<h2>Tic Tac Toe Game</h2>
<h3>@Model.Output</h3>

@using (Html.BeginForm("Index", "TicTacToe"))
{
    <table>
        @for (int j = 0; j < 3; j++)
        {
            <tr>
                @for (int i = 0; i < 3; i++)
                {
                    int boardLocation = 3*j + i;
                    <td><button type="submit" value="@boardLocation" class="tictactoeButton" name="choice">@Model.Board[boardLocation]</button></td>
                }
            </tr>
        }
    </table>
    <br/>
    <br/>
    <button type="submit" value="10" class="tictactoeButton" name="choice" attribute="">Reset Game</button>
}



